{
  "compilerOptions": {
    "typeRoots": ["src/types", "node_modules/@types"],
    "module": "commonjs",
    "target": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "ts-dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
