    "request": "^2.88.0"
  },
  "devDependencies": {
    "@mastermindzh/prettier-config": "^1.0.0",
    "electron": "https://github.com/castlabs/electron-releases#v6.1.0-wvvmp",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0",
    "prettier": "^1.18.2"
  },
  "prettier": "@mastermindzh/prettier-config"
